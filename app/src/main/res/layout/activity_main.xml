<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spnr_units2"
        style="@style/SpinnerTheme_output"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="168dp"
        android:entries="@array/longitud_unidades"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_hint" />

    <TextView
        android:id="@+id/txt_hint2"
        android:layout_width="199dp"
        android:layout_height="24dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/alright_sans_light"
        android:text="@string/hint"
        android:textAlignment="center"
        android:textColor="@color/main_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_output" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="245dp"
        android:layout_height="39dp"
        android:fontFamily="@font/alright_sans"
        android:text="@string/title"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <Spinner
        android:id="@+id/spnr_categorias"
        style="@style/SpinnerTheme"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="125dp"
        android:entries="@array/categories"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <Spinner
        android:id="@+id/spnr_units"
        style="@style/SpinnerTheme"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="168dp"
        android:entries="@array/longitud_unidades"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnr_categorias" />

    <TextView
        android:id="@+id/txt_hint"
        android:layout_width="199dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/alright_sans_light"
        android:text="@string/hint"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxt_input" />

    <EditText
        android:id="@+id/editTxt_input"
        android:layout_width="243dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/code_pro"
        android:hint="@string/placeholder"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnr_units"
        android:autofillHints="" />

    <TextView
        android:id="@+id/txt_output"
        android:layout_width="243dp"
        android:layout_height="49dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/code_pro"
        android:foregroundTint="@color/secondary_color"
        android:hint="@string/placeholder"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnr_units2" />

</androidx.constraintlayout.widget.ConstraintLayout>